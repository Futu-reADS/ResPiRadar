<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btView">
    <SwitchPreference
        android:defaultValue="false"
        android:key="bluetooth_switch"
        android:title="Bluetooth Off"
        android:summary="Switch Bluetooth on or off" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="raspberrypi"
        android:inputType="textCapWords"
        android:key="bluetooth_raspberrypi_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Name or MAC adress for Raspberry Pi"
        android:summary="raspberrypi" />
    <ListPreference
        android:enabled="false"
        android:key="bluetooth_list"
        android:title="Available Bluetooth devices" />
    <PreferenceCategory
        android:title="Manual connection">
        <SwitchPreference
            android:defaultValue="false"
            android:key="bluetooth_auto_connect"
            android:title="Automated Connection" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="search_bluetooth_device"
            android:title="Search after Raspberry Pi" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="bluetooth_connect"
            android:title="Connect to Raspberry Pi" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Other settings">
        <EditTextPreference
            android:capitalize="words"
            android:inputType="textCapWords"
            android:key="command_terminal"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary=""
            android:title="Command Terminal" />
    </PreferenceCategory>

</PreferenceScreen>